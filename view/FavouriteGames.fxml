<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.image.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controller.FavouriteGamesController"
        prefWidth="800" alignment="center" spacing="10" styleClass="root">
	
	<HBox alignment="center_left" spacing="10">
        <ImageView>
            <image>
                <Image url="@game_icon.png"/>
            </image>
        </ImageView>
        <Label text="Favourite Games" styleClass="h1"/>
    </HBox>
    
    <HBox alignment="center" spacing="10">
        <Label text="Customer ID:"/>
        <TextField fx:id="idTf"/>
        <Button fx:id="selectCustomerBtn" text="Select Customer"
                styleClass="button" onAction="#handleSelectCustomer"/>
    </HBox>
    
    <Text fx:id="commentTxt"/>
    
    <Label text="Favourite Games" styleClass="h2"/>
    
    <TableView fx:id="favGameTv" styleClass="table-view">
        <placeholder>
            <Label text="No results found."/>
        </placeholder>
        <columns>
            <TableColumn text="Title">
                <cellValueFactory><PropertyValueFactory property="title"/></cellValueFactory>
            </TableColumn>
            <TableColumn text="Year">
                <cellValueFactory><PropertyValueFactory property="year"/></cellValueFactory>
            </TableColumn>
            <TableColumn text="Genre">
                <cellValueFactory><PropertyValueFactory property="genre"/></cellValueFactory>
            </TableColumn>
            <TableColumn text="Price">
                <cellValueFactory><PropertyValueFactory property="price"/></cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
    
    <Button text="Close" styleClass="button" onAction="#handleExit"/>
    
    <stylesheets>
        <URL value="@kiosk.css"/>
    </stylesheets>
</VBox>
