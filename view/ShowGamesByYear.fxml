<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.cell.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controller.ShowGamesByYearController"
        prefWidth="800" alignment="center" spacing="10" styleClass="root">
	
	<HBox alignment="center_left" spacing="10">
        <ImageView>
            <image>
                <Image url="@game_icon.png"/>
            </image>
        </ImageView>
        <Label text="Games by Year" styleClass="h1"/>
    </HBox>
    
    <GridPane alignment="center" hgap="10" vgap="10">
        
        <Label text="Years:" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="h2"/>
        
        <Label text="Games:" GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="h2"/>
        
        <ListView fx:id="yearsLv" items="${controller.kiosk.catalogue.years}"
                  GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="list-view"/>
        
        <TableView fx:id="gamesTv" GridPane.columnIndex="1"
                   GridPane.rowIndex="1" styleClass="table-view">
            <placeholder>
                <Label text="No results found."/>
            </placeholder>
            <columns>
                <TableColumn text="Title">
                    <cellValueFactory><PropertyValueFactory property="title"/></cellValueFactory>
                </TableColumn>
                <TableColumn text="Year">
                    <cellValueFactory><PropertyValueFactory property="year"/></cellValueFactory>
                </TableColumn>
                <TableColumn text="Genre">
                    <cellValueFactory><PropertyValueFactory property="genre"/></cellValueFactory>
                </TableColumn>
                <TableColumn text="Price">
                    <cellValueFactory><PropertyValueFactory property="price"/></cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
        
        <Button fx:id="displayGamesBtn" text="Display Games"
                GridPane.columnIndex="0" GridPane.rowIndex="2"
                styleClass="button" onAction="#handleDisplayGames"/>
        
    </GridPane>
    
    <Button text="Exit" styleClass="button" onAction="#handleExit"/>
  
    <stylesheets>
        <URL value="@kiosk.css"/>
    </stylesheets>

</VBox>
